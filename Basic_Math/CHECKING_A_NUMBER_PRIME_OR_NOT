public class Checking_prime {
    static boolean isPrime(int a ){
        for(int i=2;i<a;i++){
            if(a%i==0){
                return false;
            }
        }
        return true;
    }

    public static void main(String[] args) {
        int a=13;
        if(isPrime(a)){
            System.out.println("It is a prime number");
        }
        else{
            System.out.println("It is not a prime");
        }
    }

}
